# YouGile MCP Server Configuration
# Copy this file to .env and fill in your values

# YouGile API Base URL (usually https://yougile.com)
YOUGILE_BASE_URL=https://yougile.com

# MCP Server Display Name
YOUGILE_SERVER_NAME=YouGile MCP Server

# Development Settings (optional)
# Logging level: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO
# Extra HTTP debug dump (0 = off, 1 = on)
YOUGILE_HTTP_DEBUG=0
YOUGILE_TIMEOUT=30
YOUGILE_MAX_RETRIES=3

# Authentication credentials
YOUGILE_EMAIL=your-email@yougile.com
YOUGILE_PASSWORD=your-password
YOUGILE_COMPANY_ID=00000000-0000-0000-0000-000000000000

# API Key (will be auto-generated and saved here)
# YOUGILE_API_KEY=your-api-key-will-be-saved-here