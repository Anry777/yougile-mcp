# YouGile MCP Server Configuration
# Copy this file to .env and fill in your values

# YouGile API Base URL (usually https://yougile.com)
YOUGILE_BASE_URL=https://yougile.com

# MCP Server Display Name
YOUGILE_SERVER_NAME=YouGile MCP Server

# Development Settings (optional)
# Logging level: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO
# Extra HTTP debug dump (0 = off, 1 = on)
YOUGILE_HTTP_DEBUG=0
YOUGILE_TIMEOUT=30
YOUGILE_MAX_RETRIES=3

# Local database URL (SQLite by default)
# Example for local file in data/ subdirectory of project root:
# YOUGILE_LOCAL_DB_URL=sqlite+aiosqlite:///data/yougile_local.db

# Webhook server settings (optional)
# Host/port where FastAPI webhook server will listen
YOUGILE_WEBHOOK_HOST=0.0.0.0
YOUGILE_WEBHOOK_PORT=5533
# Enable auto-reload in development (0 or 1)
YOUGILE_WEBHOOK_RELOAD=0
# Separate database for webhook events (optional)
YOUGILE_WEBHOOK_DB_URL=sqlite+aiosqlite:///data/yougile_webhooks.db
# Public URL where YouGile will send webhooks (for auto-check at startup)
YOUGILE_WEBHOOK_PUBLIC_URL=https://yg-wh-prod.teamgram.ru

# Authentication credentials
YOUGILE_EMAIL=your-email@yougile.com
YOUGILE_PASSWORD=your-password
YOUGILE_COMPANY_ID=00000000-0000-0000-0000-000000000000

# API Key (will be auto-generated and saved here)
# YOUGILE_API_KEY=your-api-key-will-be-saved-here